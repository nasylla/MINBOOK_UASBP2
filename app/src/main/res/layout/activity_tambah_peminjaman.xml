<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_primary"
    android:padding="24dp"
    tools:context=".TambahPeminjamanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="Tambah Peminjaman"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Nama Peminjam -->
        <TextView
            android:id="@+id/labelNamaPeminjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:text="Nama Peminjam"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/etNamaPeminjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelNamaPeminjam"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edittext_white"
            android:hint="Masukkan nama peminjam"
            android:padding="12dp" />

        <!-- Judul Buku (diubah menjadi TextView yang bisa diklik) -->
        <TextView
            android:id="@+id/labelJudulBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNamaPeminjam"
            android:layout_marginTop="16dp"
            android:text="Pilih Buku"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvPilihBuku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelJudulBuku"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edittext_white"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:hint="Klik untuk memilih buku..."
            android:padding="12dp"
            android:textColor="@android:color/black" />

        <!-- Tanggal Pinjam -->
        <TextView
            android:id="@+id/labelTanggalPinjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPilihBuku"
            android:layout_marginTop="16dp"
            android:text="Tanggal Pinjam"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/etTanggalPinjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelTanggalPinjam"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edittext_white"
            android:drawableEnd="@drawable/ic_kalender"
            android:hint="Pilih tanggal pinjam"
            android:padding="12dp" />

        <!-- Tanggal Kembali -->
        <TextView
            android:id="@+id/labelTanggalKembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTanggalPinjam"
            android:layout_marginTop="16dp"
            android:text="Tanggal Kembali"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/etTanggalKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelTanggalKembali"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edittext_white"
            android:drawableEnd="@drawable/ic_kalender"
            android:hint="Pilih tanggal kembali"
            android:padding="12dp" />

        <!-- Petugas -->
        <TextView
            android:id="@+id/labelPetugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTanggalKembali"
            android:layout_marginTop="16dp"
            android:text="Petugas"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/etPetugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelPetugas"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edittext_white"
            android:hint="Masukkan nama petugas"
            android:padding="12dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/labelStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPetugas"
            android:layout_marginTop="16dp"
            android:text="Status"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelStatus"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edittext_white"
            android:padding="6dp" />

        <!-- Tombol -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBatal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerStatus"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_button_red"
            android:text="Batal"
            android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBatal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button_green"
            android:text="Simpan"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</ScrollView>